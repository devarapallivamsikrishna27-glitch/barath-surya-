// server.js
require('dotenv').config();
const express = require('express');
const bodyParser = require('body-parser');
const path = require('path');
const fs = require('fs');

const app = express();
app.use(bodyParser.json());
app.use(express.static(path.join(__dirname, 'public')));

const INSTR_PATH = path.join(__dirname, 'instructions.json');
let instructions = {};
try {
  instructions = JSON.parse(fs.readFileSync(INSTR_PATH, 'utf8'));
} catch (err) {
  console.error('Cannot read instructions.json:', err.message);
}

// Simple keyword heuristic
function heuristicMatch(text) {
  if (!text) return null;
  const t = text.toLowerCase();
  if (t.includes('bleed') || t.includes('bleeding') || t.includes('cut')) return 'bleeding';
  if (t.includes('burn')) return 'burn';
  if (t.includes('choke') || t.includes('choking')) return 'choking';
  if (t.includes('faint') || t.includes('fainted')) return 'fainting';
  return null;
}

app.post('/api/assist', async (req, res) => {
  const { message } = req.body || {};
  if (!message) return res.status(400).json({ error: 'message required' });

  // 1) fallback from instructions.json via heuristic
  const key = heuristicMatch(message);
  if (key && instructions[key]) {
    return res.json({
      condition: key,
      triage: instructions[key].triage,
      confidence: 0.95,
      steps: instructions[key].steps,
      source: 'fallback'
    });
  }

  // 2) If OPENAI_API_KEY is present, try calling OpenAI
  try {
    if (!process.env.OPENAI_API_KEY) throw new Error('No OPENAI_API_KEY configured');

    const OpenAI = require('openai');
    const client = new OpenAI({ apiKey: process.env.OPENAI_API_KEY });

    const prompt = `You are a concise first-aid assistant. The user says: "${message}". Output ONLY valid JSON (no extra text) with keys:
{
  "condition": "short label",
  "triage": "emergency" or "non-emergency",
  "confidence": 0-1 number,
  "steps": ["short step 1", "short step 2", ...]
}
Keep steps short and actionable.`;

    // Note: API shape may vary by openai package version; adapt if needed
    const response = await client.chat.completions.create({
      model: "gpt-4o-mini",
      messages: [{ role: "user", content: prompt }],
      max_tokens: 300
    });

    const text = response.choices?.[0]?.message?.content || '';
    let parsed;
    try {
      parsed = JSON.parse(text);
    } catch (err) {
      // If model didn't return clean JSON, wrap the text safely
      parsed = {
        condition: "unknown",
        triage: "unknown",
        confidence: 0.5,
        steps: [text]
      };
    }
    parsed.source = 'ai';
    return res.json(parsed);

  } catch (err) {
    console.warn('AI error or no API key:', err.message);
    // safe generic reply if AI unavailable
    return res.json({
      condition: 'unknown',
      triage: 'unknown',
      confidence: 0.3,
      steps: [
        "Unable to fetch AI response. Use local instructions or call emergency services if severe."
      ],
      source: 'error'
    });
  }
});

// SPA fallback
app.get('*', (req, res) => {
  res.sendFile(path.join(__dirname, 'public', 'index.html'));
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => console.log(`Server listening on port ${PORT}`));
