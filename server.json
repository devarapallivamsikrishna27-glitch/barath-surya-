// server.js
require('dotenv').config();
const express = require('express');
const bodyParser = require('body-parser');
const path = require('path');
const fs = require('fs');

const app = express();
app.use(bodyParser.json());
app.use(express.static(path.join(__dirname, 'public')));

const INSTR_PATH = path.join(__dirname, 'instructions.json');
const instructions = JSON.parse(fs.readFileSync(INSTR_PATH, 'utf8'));

// Basic keyword heuristic
function heuristicMatch(text) {
  if (!text) return null;
  const t = text.toLowerCase();
  if (t.includes('bleed') || t.includes('bleeding') || t.includes('cut')) return 'bleeding';
  if (t.includes('burn')) return 'burn';
  if (t.includes('choke') || t.includes('choking')) return 'choking';
  return null;
}

app.post('/api/assist', async (req, res) => {
  const { message } = req.body || {};
  if (!message) return res.status(400).json({ error: 'message required' });

  // 1) Fallback from instructions.json if heuristic matches
  const key = heuristicMatch(message);
  if (key && instructions[key]) {
    return res.json({
      condition: key,
      triage: instructions[key].triage,
      confidence: 0.95,
      steps: instructions[key].steps,
      source: 'fallback'
    });
  }

  // 2) If OPENAI_API_KEY present, call OpenAI; otherwise return generic fallback
  try {
    if (!process.env.OPENAI_API_KEY) throw new Error('No OPENAI_API_KEY configured');

    const OpenAI = require('openai');
    const client = new OpenAI({ apiKey: process.env.OPENAI_API_KEY });

    const prompt = `You are a concise first-aid assistant. The user says: "${message}". Output a JSON object with keys: condition (short string), triage ("emergency" or "non-emergency"), confidence (0-1 numeric), steps (array of short instruction strings). Only output valid JSON.`;

    const response = await client.chat.completions.create({
      model: "gpt-4o-mini",
      messages: [{ role: "user", content: prompt }],
      max_tokens: 300
    });

    const text = response.choices?.[0]?.message?.content || '';
    let parsed;
    try {
      parsed = JSON.parse(text);
    } catch (err) {
      // If the model didn't respond with strict JSON, fallback to wrapping text
      parsed = {
        condition: "unknown",
        triage: "unknown",
        confidence: 0.5,
        steps: [text]
      };
    }
    parsed.source = 'ai';
    return res.json(parsed);

  } catch (err) {
    console.error('AI error or no API key:', err.message);
    // safe generic reply
    return res.json({
      condition: 'unknown',
      triage: 'unknown',
      confidence: 0.3,
      steps: ["Unable to fetch AI response. If this is life-threatening, call emergency services immediately."],
      source: 'error'
    });
  }
});

// fallback for SPA routes
app.get('*', (req, res) => {
  res.sendFile(path.join(__dirname, 'public', 'index.html'));
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => console.log(`Server listening on port ${PORT}`));
